<div class="container">
  <%= form_for contact do |f| %>
    <% if contact.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(contact.errors.count, "error")%></h4>
        <ul>
          <% contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_group_tag(contact.errors[:name]) do %>
      <%= f.label :name %>
      <%= f.text_field :name,class: 'from-control', placeholder: 'Enter your name here' %>
    <% end %>
    <%= form_group_tag(contact.errors[:email]) do %>
      <%= f.label :email %>
      <%= f.text_field :email, cols: 80,class: 'from-control', placeholder: 'Enter your email here' %>
    <% end %>
    <%= form_group_tag(contact.errors[:body]) do %>
      <%= f.text_area :body, rows: 20, cols: 80, class: 'from-control', placeholder: 'Enter your text here' %>
    <% end %>

    <div class='form-group'>
     <%= f.submit "Send", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>